#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

source $(dirname "$0")/deb-cleanup.sh

export DEBIAN_FRONTEND=noninteractive
export PACKAGES_TO_KEEP=(
    # core os
    apt-utils
    cron
    dbus
    debconf-i18n
    dhcpcd-base
    libpam-systemd
    linux-sysctl-defaults
    logrotate
    netbase
    procps
    sudo
    systemd
    systemd-sysv
    udev
    whiptail

    # networking
    ifupdown
    iproute2
    iputils-ping
    nftables

    # minimal console utilities
    less
    locales
    nano
    sensible-utils
    vim-tiny

    # extra
    curl
    git
    manpages
    socat
    vim
)
system_cleanup
